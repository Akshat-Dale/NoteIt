<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddNoteActivity"
    android:background="@color/grey"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleEvUpdate"
            android:hint="Title..."
            android:singleLine="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subTitleEvUpdate"
            android:hint="Sub Title..."
            android:singleLine="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginStart="10dp"/>



            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:id="@+id/imageViewGreenUpdate"
                android:src="@drawable/baseline_done_24"
                android:padding="3dp"
                android:background="@drawable/green_shape"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:id="@+id/imageViewYellowUpdate"
                android:background="@drawable/yellow_shape"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:padding="3dp"
                android:id="@+id/imageViewRedUpdate"
                android:background="@drawable/red_shape"/>

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/noteEvUpdate"
            android:hint="Note..."
            android:gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edittext_background"/>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingbuttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_done_24" />

</RelativeLayout>


</layout>